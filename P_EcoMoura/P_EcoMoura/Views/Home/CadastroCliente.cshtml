
@{
    ViewData["Title"] = "CadastroCliente";
}

<div class="row">
    <div class="col-xl-12">
        <!-- ============================================================== -->
        <!-- pageheader  -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header" id="top">
                    <h2 class="pageheader-title">Cadastro de Clientes </h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Gerenciar</a></li>
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Clientes</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Cadastro</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- formulario de cadastro  -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">Formulário de Cadastro</h5>
                    <div class="card-body">
                        <form>
                            <p>As informações com * são obrigatórias</p>

                            <div class="form-row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3 dropdown">
                                    <label for="rota" class="col-form-label">Unidade *</label><br />
                                    <select class="form-control">
                                        <option value=""></option>
                                        <option value="562">Bauru</option>
                                        <option value="561">Presidente Prudente</option>
                                        <option value="091">São José do Rio Preto</option>
                                    </select>
                                </div>

                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2 dropdown">
                                    <label for="rota" class="col-form-label">Situação *</label><br />
                                    <select class="form-control">
                                        <option value=""></option>
                                        <option value="1">Ativo</option>
                                        <option value="0">Inativo</option>
                                    </select>
                                </div>
                            </div>
                            <br />
                            <div class="form-row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3">
                                    <label for="cnpj" class="col-form-label">CNPJ *</label>
                                    <input id="cnpj" type="text" class="form-control">
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-9">
                                    <label for="razaoSocial" class="col-form-label">Razão Social *</label>
                                    <input id="razaoSocial" type="text" class="form-control">
                                </div>
                            </div>



                            <div class="form-row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3">
                                    <label for="cep" class="col-form-label">CEP *</label>
                                    <input id="cep" type="text" class="form-control">
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-7">
                                    <label for="logradouro" class="col-form-label">Logradouro *</label>
                                    <input id="logradouro" type="text" class="form-control">
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2">
                                    <label for="numero" class="col-form-label">Número *</label>
                                    <input id="numero" type="text" class="form-control">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <label for="complemento" class="col-form-label">Complemento</label>
                                    <input id="complemento" type="text" class="form-control">
                                </div>
                            </div>



                            <div class="form-row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5">
                                    <label for="bairro" class="col-form-label">Bairro *</label>
                                    <input id="bairro" type="text" class="form-control">
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5">
                                    <label for="cidade" class="col-form-label">Cidade *</label>
                                    <input id="cidade" type="text" class="form-control">
                                </div>

                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2">
                                    <label for="estado" class="col-form-label">Estado *</label>
                                    <input id="estado" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5">
                                    <label for="telefone" class="col-form-label">Telefone</label>
                                    <input id="telefone" type="text" class="form-control">
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5">
                                    <label for="celular" class="col-form-label">Celular</label>
                                    <input id="celular" type="text" class="form-control">
                                </div>
                            </div>

                            <br />
                            <div class="border-top">
                                <br />
                                <h5>Informações Complementares</h5>

                                <div class="form-row">
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3">
                                        <label for="saldoBIN" class="col-form-label">Saldo BIN</label>
                                        <input id="saldoBIN" type="text" class="form-control">
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-2 dropdown">
                                        <label for="rota" class="col-form-label">Rota</label><br />
                                        <select class="form-control">
                                            <option value=""></option>
                                            <option value="1">Rota 1</option>
                                            <option value="2">Rota 2</option>
                                            <option value="3">Rota 3</option>
                                            <option value="4">Rota 4</option>
                                            <option value="5">Rota 5</option>
                                            <option value="6">Rota 6</option>
                                            <option value="7">Rota 7</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="form-group row">
                                <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                                    <button type="submit" class="btn btn-space btn-primary">Salvar</button>
                                    <button class="btn btn-space btn-secondary">Cancelar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end formulario de cadastro  -->
        <!-- ============================================================== -->
    </div>
</div>

